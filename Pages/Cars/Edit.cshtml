@page
@model Proiect_Mercedes.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">
                <label asp-for="Car.Photo" class="control-label"></label>
                <input asp-for="Car.Photo" class="form-control" />
                <span asp-validation-for="Car.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarModelID" class="control-label"></label>
                <select asp-for="Car.CarModelID" class="form-control" asp-items="ViewBag.CarModelID"></select>
                <span asp-validation-for="Car.CarModelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarMotorID" class="control-label"></label>
                <select asp-for="Car.CarMotorID" class="form-control" asp-items="ViewBag.CarMotorID"></select>
                <span asp-validation-for="Car.CarMotorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarTransID" class="control-label">Transmission</label>
                <select asp-for="Car.CarTransID" class="form-control" asp-items="ViewBag.CarTransID"></select>
                <span asp-validation-for="Car.CarTransID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarStateID" class="control-label"></label>
                <select asp-for="Car.CarStateID" class="form-control" asp-items="ViewBag.CarStateID"></select>
                <span asp-validation-for="Car.CarStateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ManufacturingYear" class="control-label"></label>
                <input asp-for="Car.ManufacturingYear" class="form-control" />
                <span asp-validation-for="Car.ManufacturingYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Feature" class="control-label"></label>
                <input asp-for="Car.Feature" class="form-control" />
                <span asp-validation-for="Car.Feature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
